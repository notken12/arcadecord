{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "baseUrl": "./",
        "paths": {
            "@app/*": [
                "server/src/*"
            ],
            "components/*": [
                "server/src/components/*"
            ],
            "scss/*": [
                "server/src/scss/*"
            ],
        }
    },
    "include": [
        "server/src/**/*.vue",
        "server/src/**/*.js"
    ]
}